@import url('https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600&display=swap');

// Primary
$soft-blue = hsl(215, 51%, 70%)
$cyan = hsl(178, 100%, 50%)

// Neutral
$very-dark-blue-main-bg = hsl(217, 54%, 11%)
$very-dark-blue-card-bg = hsl(216, 50%, 16%)
$very-dark-blue-line = hsl(215, 32%, 27%)
$white = hsl(0, 0%, 100%)


*
  margin 0
  padding 0
  font-family: 'Outfit', sans-serif;

body
  display flex
  align-items center
  flex-direction column
  background-color $very-dark-blue-main-bg
  margin-top 4rem
  @media (min-width 768px)
    margin-top 0
    justify-content center
    min-height 100vh


.card
  background-color $very-dark-blue-card-bg
  color $soft-blue
  width 275px
  padding 25px 25px 30px
  border-radius 1rem
  @media (min-width 768px)
    width 300px

  header
    position relative
    display flex

    > .hover-box
      position absolute
      width 100%
      height 100%
      display flex
      align-items center
      justify-content center
      background-color rgba($cyan,.5)
      visibility hidden
      border-radius .5rem

    &:hover > .hover-box
      cursor pointer
      visibility visible

  header > img:not(.hover-box)
    width 100%
    border-radius .5rem

  main
    display flex
    flex-direction column
    margin-top 1.25rem
    padding-bottom 1.5rem
    margin-bottom 1rem
    border-bottom 1px solid $very-dark-blue-line

    h1
      color $white
      margin-bottom 1rem
      font-size 22px
      font-weight 600
      &:hover
        color $cyan
        cursor pointer

    p
      font-size 16px
      font-weight 300
      margin-bottom 1.25rem
      line-height 1.5em
      @media (min-width 768px)
        font-size 18px

    .info, .info > div
      display flex
      justify-content space-between
      align-items center

      > img
        margin-right .5rem

      &:first-child
        color $cyan

  footer
    display flex
    align-items center

    img
      width 30px
      height 30px
      border-radius 2rem
      border 1px solid $white
      margin-right 1rem

    p > span
      color $white
      font-weight 300

      &:hover
        color $cyan
        cursor pointer
